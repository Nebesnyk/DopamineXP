@page "/task/{TaskName}"
@using DopamineXP.Models
@inject Services.TrackerBrain Brain
@inject NavigationManager NavManager

<div class="tracker-container" style="@($"--theme-color: {activeTask?.HexColor ?? "#ffffff"};")">
    
    @if (activeTask == null)
    {
        <div class="main-scene">
            <h1 style="color: white; text-align: center; margin-top: 50px;">Task Not Found!</h1>
        </div>
    }
    else
    {
        <div class="main-scene">
            <div class="task-header">
                @if (!_isEditing)
                {
                    <h1 class="task-title">@activeTask.Name.ToUpper()</h1>
                    <div class="edit-btn" @onclick="ToggleEdit">EDIT SETTINGS</div>
                }
                else
                {
                    <div class="edit-mode-container">
                        <input type="text" class="xp-input" style="width: 250px; text-align: left;" @bind="_editName" />
                        <input type="color" class="color-input" style="width: 60px; height: 45px; cursor: pointer;" @bind="_editColor" />
                        
                        <div class="save-btn" @onclick="SaveChanges">SAVE</div>
                        <div class="cancel-btn" @onclick="ToggleEdit">CANCEL</div>
                    </div>
                }
            </div>
            
            <div class="task-content">
                <div class="level-container">
                    <div class="level-xp-text">
                        <span class="level-text">Level @activeTask.Level</span>
                        <span class="xp-text">@((int)activeTask.XP)/@((int)_threshold)XP</span>
                    </div>
                    
                    <div class="progress-track-bar">
                        <div class="progress-fill-bar" style="width: @(activeTask.XP < _threshold ? (activeTask.XP / _threshold * 100) : 100)%"></div>
                    </div>
                    
                    <div class="level-input-buttons">
                        <input type="number" class="xp-input" placeholder="Minutes" min="0" @bind="_minutesSpent"/>
                        <div class="append-xp-btn" @onclick="AppendXp">APPEND</div>
                        <div class="level-up-btn @CanLevelUp()" @onclick="LevelUp">LEVEL UP!</div>
                    </div>
                    
                    @if (activeTask.LastLogged == DateTime.Today && !string.IsNullOrEmpty(activeTask.DailyStreakMessage))
                    {
                        <div style="color: #00ff66; text-align: center; margin-top: 15px; font-weight: 900; letter-spacing: 1px; text-shadow: 0 0 10px rgba(0, 255, 102, 0.5); animation: fade-in 0.5s;">
                            @activeTask.DailyStreakMessage
                        </div>
                    }
                </div>
                
                <div class="points-streak">
                    <span class="points-text">@activeTask.Points @activeTask.Name.Substring(0, 1)P</span>
                    <span class="streak-text">Streak: @activeTask.Streak days</span>
                </div>
                
            </div>
            <div class="level-text" style="font-weight: 600; font-size: 36px; text-align: center; margin-top: 20px">SHOP</div>
            <div class="shop-field">
                @{
                    bool isBuffActive = DateTime.Now <= activeTask.MultiplierExpiration;
                }

                <div class="shop-style xp-boost-field"
                     style="@(isBuffActive ? "box-shadow: 0 8px 25px rgba(0, 255, 102, 0.2); border-color: rgba(0, 255, 102, 0.5);" : "")">
     
                    <div class="shop-item-title">XP Buff</div>
                    <div class="shop-item-desc">
                        2x XP for 24 Hours
                    </div>
    
                    <button class="buy-btn xp-buy"
                            disabled="@(isBuffActive || activeTask.Points < activeTask.MultiplierPrice)"
                            @onclick="BuyMultiplier">
                        @(isBuffActive ? "ACTIVE" : $"{activeTask.MultiplierPrice} {activeTask.Name.Substring(0, 1)}P")
                    </button>
                </div>

                <div class="shop-style streak-shield-field"
                     style="@(activeTask.HasStreakFreeze ? "box-shadow: 0 8px 25px rgba(0, 157, 255, 0.2); border-color: rgba(0, 157, 255, 0.5);" : "" )">
                    <div class="shop-item-title">Streak Freeze</div>
                    <div class="shop-item-desc">Protects streak if you miss a day</div>
                    <button class="buy-btn shield-buy"
                            disabled="@(activeTask.HasStreakFreeze || activeTask.Points < activeTask.StreakFreezePrice)"
                            @onclick="BuyStreakFreeze">
                        @(activeTask.HasStreakFreeze ? "ACTIVE" : $"{activeTask.StreakFreezePrice} {activeTask.Name.Substring(0, 1)}P")
                    </button>
                </div>
            </div>
            
            <div class="delete-container">
                <div class="delete-btn" @onclick="DeleteTask">DELETE TASK</div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string TaskName { get; set; } = "";

    private DopamineTask? activeTask;
    private int? _minutesSpent;
    private double _threshold = 100;

    protected override void OnParametersSet()
    {
        string decodedName = System.Net.WebUtility.UrlDecode(TaskName);
        activeTask = Brain.CustomTasks.FirstOrDefault(t => t.Name.Equals(decodedName, StringComparison.OrdinalIgnoreCase));
        
        if (activeTask != null)
        {
            _threshold = (int)(Math.Pow(1.2, activeTask.Level) * 100);
        }
    }

    private void AppendXp()
    {
        if (_minutesSpent == null || activeTask == null) return;

        double shopBuff = 1.0;
        if (DateTime.Now <= activeTask.MultiplierExpiration)
            shopBuff = 2.0;
        
        activeTask.XP += (int)(2 * _minutesSpent.Value * (activeTask.Streak * 0.1 + 1)) * shopBuff;
        _minutesSpent = null;

        DateTime today = DateTime.Today;

        if (activeTask.LastLogged < today)
        {
            if (activeTask.LastLogged == today.AddDays(-1))
            {
                activeTask.Streak++;
                activeTask.DailyStreakMessage = $"STREAK HIT! {activeTask.Streak} DAYS!";
            }
            else if (activeTask.LastLogged == today.AddDays(-2) && activeTask.HasStreakFreeze)
            {
                activeTask.HasStreakFreeze = false;
                activeTask.Streak++; 
                activeTask.DailyStreakMessage = $"STREAK SAVED BY FREEZE! {activeTask.Streak} DAYS!";
            }
            else
            {
                activeTask.Streak = 1;
                activeTask.DailyStreakMessage = "STREAK STARTED! DAY 1!";
            }
            activeTask.LastLogged = today;
        }
        
        Brain.OnChange?.Invoke(); 
        Brain.SaveToFile();
    }

    private string CanLevelUp()
    {
        if (activeTask != null && activeTask.XP >= _threshold)
            return "is-ready";
        return "";
    }

    private void LevelUp()
    {
        if (activeTask == null || activeTask.XP < _threshold) return;
        
        activeTask.XP -= _threshold;
        activeTask.Points += activeTask.Level;
        activeTask.Level++;
        _threshold = Math.Pow(1.2, activeTask.Level) * 100;
        
        Brain.OnChange?.Invoke();
        Brain.SaveToFile();
    }
    
    private void DeleteTask()
    {
        if (activeTask != null)
        {
            Brain.CustomTasks.Remove(activeTask);
            
            Brain.OnChange?.Invoke(); 
            Brain.SaveToFile();
            
            NavManager.NavigateTo("/"); 
        }
    }
    
    private bool _isEditing = false;
    private string _editName = "";
    private string _editColor = "";

    private void ToggleEdit()
    {
        if (activeTask != null)
        {
            _editName = activeTask.Name;
            _editColor = activeTask.HexColor;
            _isEditing = !_isEditing;
        }
    }

    private void SaveChanges()
    {
        if (activeTask != null && !string.IsNullOrWhiteSpace(_editName))
        {
            bool nameChanged = activeTask.Name != _editName;
            
            activeTask.Name = _editName;
            activeTask.HexColor = _editColor;
            _isEditing = false;
            
            Brain.OnChange?.Invoke(); 
            Brain.SaveToFile();

            if (nameChanged)
            {
                NavManager.NavigateTo($"/task/{System.Net.WebUtility.UrlEncode(activeTask.Name)}");
            }
        }
    }

    private void BuyMultiplier()
    {
        if (activeTask != null && activeTask.Points >= activeTask.MultiplierPrice)
        {
            activeTask.Points -= activeTask.MultiplierPrice;
            activeTask.MultiplierPrice *= 2;
            activeTask.MultiplierExpiration = DateTime.Now.AddHours(24);
            
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }
    }

    private void BuyStreakFreeze()
    {
        if (activeTask != null && activeTask.Points >= activeTask.StreakFreezePrice)
        {
            activeTask.Points -= activeTask.StreakFreezePrice;
            activeTask.StreakFreezePrice *= 2;
            activeTask.HasStreakFreeze = true;
            
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }
    }
}

