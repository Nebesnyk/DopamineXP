@page "/task/cores/{TaskName}" 
@using DopamineXP.Models
@using DopamineXP.Services
@inject TrackerBrain Brain
@using System.Timers
@implements IDisposable

<div class="tracker-container" style="@($"--theme-color: {activeTask?.HexColor ?? "#ffffff"};")">
    @if (activeTask == null)
    {
        <div class="main-scene">
            <h1 style="color: black; text-align: center; margin-top: 50px;">Task Not Found!</h1>
        </div>
    }
    else
    {
        <div class="main-scene">
            <div class="currencies-container">
                <div class="resource-container cores-container">
                    <div class="currency-text">CORES</div>
                    <div class="resource-value">@activeTask.Cores</div>
                </div>
                
                <div class="resource-container shards-container">
                    <div class="currency-text">SHARDS</div>
                    <div class="resource-value">@activeTask.Shards</div>
                </div>
            </div>
            
            <div class="generators-container">
                <div class="first-shards-generator-container">
                    <div class="first-generator-text">FIRST SHARD GENERATOR</div>
                    <div class="first-generators-amount-text">You have: @activeTask.FirstGeneratorsAmount @(activeTask.FirstGeneratorsAmount == 1 ? "generator" : "generators")</div>
                    <button class="first-generator-btn" 
                            disabled="@(activeTask.Cores < activeTask.FirstGeneratorsAmount + 1)"
                            @onclick="BuyFirstGenerator">BUY FOR @(activeTask.FirstGeneratorsAmount + 1) @(activeTask.Cores == 1 ? "CORE" : "CORES")</button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string TaskName { get; set; } = "";

    private DopamineTask? activeTask;
    private Timer? _shardTimer; 

    protected override void OnParametersSet()
    {
        string decodedName = System.Net.WebUtility.UrlDecode(TaskName);
        activeTask = Brain.CustomTasks.FirstOrDefault(t => t.Name.Equals(decodedName, StringComparison.OrdinalIgnoreCase));
        
        if (activeTask != null && activeTask.FirstGeneratorsAmount > 0)
        {
            CalculateOfflineShards();

            if (_shardTimer == null) 
            {
                _shardTimer = new Timer(5000);
                _shardTimer.Elapsed += GenerateShardLive;
                _shardTimer.Start();
            }
        }
    }

    private void CalculateOfflineShards()
    {
        // Only generate Shards if they actually have extracted a Core
        if (activeTask.AmountOfPrestiges > 0)
        {
            TimeSpan timeAway = DateTime.Now - activeTask.LastShardUpdate;

            int ticks = (int)(timeAway.TotalSeconds / 5);
            
            if (ticks > 0)
            {
                activeTask.Shards += (ticks * activeTask.FirstGeneratorsAmount);
                
                // Move the timestamp forward to account for the generated Shards
                activeTask.LastShardUpdate = activeTask.LastShardUpdate.AddSeconds(ticks * 5);
                Brain.SaveToFile();
            }
        }
    }

    private void GenerateShardLive(object? sender, ElapsedEventArgs e)
    {
        if (activeTask != null && activeTask.AmountOfPrestiges > 0)
        {
            activeTask.Shards += activeTask.FirstGeneratorsAmount;
            activeTask.LastShardUpdate = DateTime.Now;
            
            Brain.SaveToFile();
            
            InvokeAsync(StateHasChanged); 
        }
    }

    public void Dispose()
    {
        _shardTimer?.Dispose();
    }

    private void BuyFirstGenerator()
    {
        activeTask.Cores -= activeTask.FirstGeneratorsAmount + 1;
        activeTask.FirstGeneratorsAmount++;

        if (activeTask.FirstGeneratorsAmount == 1)
        {
            activeTask.LastShardUpdate = DateTime.Now;

            if (_shardTimer == null)
            {
                _shardTimer = new Timer(5000);
                _shardTimer.Elapsed += GenerateShardLive;
                _shardTimer.Start();
            }
    }
    }
}

