@page "/task/cores/{TaskName}" 
@using DopamineXP.Models
@using DopamineXP.Services
@inject TrackerBrain Brain
@using System.Timers
@implements IDisposable

<div class="tracker-container" style="@($"--theme-color: {activeTask?.HexColor ?? "#ffffff"};")">
    @if (activeTask == null)
    {
        <div class="main-scene">
            <h1 style="color: black; text-align: center; margin-top: 50px;">Task Not Found!</h1>
        </div>
    }
    else
    {
        <div class="main-scene">
            <div class="currencies-container">
                <div class="resource-container cores-container">
                    <div class="currency-text">CORES</div>
                    <div class="resource-value">@activeTask.Lab.Cores</div>
                </div>
                
                <div class="resource-container prestiges-container">
                    <div class="currency-text">PRESTIGES</div>
                    <div class="resource-value">@(activeTask.Stats.PrestigeCount)</div>
                </div>
                
                <div class="resource-container shards-container">
                    <div class="currency-text">SHARDS</div>
                    <div class="resource-value">@(activeTask.FormatNumber(activeTask.Lab.Shards))</div>
                </div>
            </div>
            
            <div class="generators-container">
                <div class="shards-generator-container">
                    <div class="generator-text">SHARD GENERATOR</div>
                    <div class="generators-amount-text">You have: @activeTask.Lab.ShardGenerators @(activeTask.Lab.ShardGenerators == 1 ? "generator" : "generators")</div>
                    <button class="btn generator-btn" 
                            disabled="@(activeTask.Lab.Cores < activeTask.Lab.ShardGenerators + 1)"
                            @onclick="BuySharpGenerator">BUY FOR @(activeTask.Lab.ShardGenerators + 1) @(activeTask.Lab.ShardGenerators + 1 == 1 ? "CORE" : "CORES")</button>
                </div>
            </div>
            
            <div class="laboratory-shop-container">
                <div class="laboratory-shop-title">LABORATORY SHOP</div>
                
                <div class="lab-grid">
                    <div class="lab-item">
                        <div class="lab-item-header">THE OVERCLOCKER</div>
                        <div class="lab-item-desc">Permanently upgrades your Point Shop's XP Buff from 2x up to a massive 5x.</div>
                        <div class="lab-item-level">Level @activeTask.Lab.OverclockerLevel/4</div>
                        <button class="btn buy-shard-btn"
                                disabled="@(activeTask.Lab.Shards < activeTask.Lab.OverclockerPrice)"
                                @onclick="BuyOverclocker">UPGRADE: @(activeTask.FormatNumber(activeTask.Lab.OverclockerPrice)) SHARDS</button>
                    </div>

                    <div class="lab-item">
                        <div class="lab-item-header">POINT SYNTHESIZER</div>
                        <div class="lab-item-desc">Multiplies the amount of @activeTask.Name.Substring(0, 1)P you earn every time you Level Up.</div>
                        <div class="lab-item-level">Level @activeTask.Lab.SynthesizerLevel/5</div>
                        <button class="btn buy-shard-btn" 
                                disabled="@(activeTask.Lab.Shards < activeTask.Lab.SynthesizerPrice)"
                                @onclick="BuySynthesizer">UPGRADE: @(activeTask.FormatNumber(activeTask.Lab.SynthesizerPrice)) SHARDS</button>
                    </div>

                    <div class="lab-item">
                        <div class="lab-item-header">CORE RESONATOR</div>
                        <div class="lab-item-desc">Overcharges your Cores. Speeds up the time it takes to generate a Shard.</div>
                        <div class="lab-item-level">Level @activeTask.Lab.ResonatorLevel/5</div>
                        <button class="btn buy-shard-btn"
                                disabled="@(activeTask.Lab.Shards < activeTask.Lab.ResonatorPrice)"
                                @onclick="BuyResonator">UPGRADE: @(activeTask.FormatNumber(activeTask.Lab.ResonatorPrice)) SHARDS</button>
                    </div>

                    <div class="lab-item fountain-item">
                        <div class="lab-item-header fountain-text">THE FOUNTAINS</div>
                        <div class="lab-item-desc">Pour your shards and @activeTask.Name.Substring(0, 1)P into fountains to unlock new powers...</div>
                        <button class="btn buy-shard-btn fountain-btn"
                                disabled="@(activeTask.Lab.Shards < activeTask.Lab.FountainPrice)"
                                @onclick="BuyFountain">BUY: 1e6 shards</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public string TaskName { get; set; } = "";

    private DopamineTask? activeTask;
    private Timer? _shardTimer; 

    protected override void OnParametersSet()
    {
        string decodedName = System.Net.WebUtility.UrlDecode(TaskName);
        activeTask = Brain.CustomTasks.FirstOrDefault(t => t.Name.Equals(decodedName, StringComparison.OrdinalIgnoreCase));
        
        if (activeTask != null && activeTask.Lab.ShardGenerators > 0)
        {
            CalculateOfflineShards();

            if (_shardTimer == null) 
            {
                _shardTimer = new Timer(100);
                _shardTimer.Elapsed += GenerateShardLive;
                _shardTimer.Start();
            }
        }
    }

    private void CalculateOfflineShards()
    {
        // Only generate Shards if they actually have extracted a Core
        if (activeTask.Stats.PrestigeCount > 0)
        {
            TimeSpan timeAway = DateTime.Now - activeTask.Lab.LastShardUpdate;
            int secondsAway = (int)timeAway.TotalSeconds;
            
            if (secondsAway > 0)
            {
                // Math: 10 seconds away * 5 generators = 50 shards.
                activeTask.Lab.Shards += (secondsAway * activeTask.Lab.ShardGenerators * activeTask.Lab.ResonatorMultiplier / 10.0);
                activeTask.Lab.LastShardUpdate = activeTask.Lab.LastShardUpdate.AddSeconds(secondsAway);
                Brain.SaveToFile();
            }
        }
    }

    private void GenerateShardLive(object? sender, ElapsedEventArgs e)
    {
        if (activeTask != null && activeTask.Stats.PrestigeCount > 0)
        {
            activeTask.Lab.Shards += activeTask.Lab.ShardGenerators * activeTask.Lab.ResonatorMultiplier / 10.0;
            activeTask.Lab.LastShardUpdate = DateTime.Now;
            
            InvokeAsync(StateHasChanged); 
        }
    }

    public void Dispose()
    {
        _shardTimer?.Dispose();
    }

    private void BuySharpGenerator()
    {
        activeTask.Lab.Cores -= (int)activeTask.Lab.ShardGenerators + 1;
        activeTask.Lab.ShardGenerators++;

        if (activeTask.Lab.ShardGenerators == 1)
        {
            activeTask.Lab.LastShardUpdate = DateTime.Now;

            if (_shardTimer == null)
            {
                _shardTimer = new Timer(100);
                _shardTimer.Elapsed += GenerateShardLive;
                _shardTimer.Start();
            }
        }
        Brain.OnChange?.Invoke();
        Brain.SaveToFile();

    }
        private void BuyOverclocker()
        {
            activeTask.TryBuyOverclocker();
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }

        private void BuySynthesizer()
        {
            activeTask.TryBuySynthesizer();
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }

        private void BuyResonator()
        {
            activeTask.TryBuyResonator();
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }

        private void BuyFountain()
        {
            activeTask.TryBuyFountain();
            Brain.OnChange?.Invoke();
            Brain.SaveToFile();
        }
}

