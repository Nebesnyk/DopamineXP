@page "/Temporary"

<div class="terminal-window">
    <h2 class="title-text">DOPAMINEXP // SURVIVAL TERMINAL</h2>

    <div class="xp-container">
        <div class="xp-track">
            <div class="xp-fill" style="width: @(_currentProgress / _threshold * 100)%;"></div>
        </div>
        
        <button class="btn-log" @onclick="AddXp">LOG STUDY TIME (+10 XP)</button>
    </div>
</div>

@code {
    // Pure C# Logic
    private double  _currentProgress = 0;
    private double _threshold = 100;

    private void AddXp()
    {
        _currentProgress += 10;
        if (_currentProgress >= _threshold) _threshold *= 2;
    }
}

<style>
    /* WASTELAND TERMINAL CSS */
    body {
        background-color: #050505; /* Black background behind the app */
    }

    .terminal-window {
        background-color: #0a0e0a; /* Dark tinted green/black */
        padding: 40px;
        border: 2px solid #1a3a1a;
        border-radius: 8px;
        font-family: 'Courier New', Courier, monospace;
        color: #4af626; /* Phosphor green */
        box-shadow: inset 0 0 20px rgba(74, 246, 38, 0.1);
    }

    .title-text {
        color: #4af626;
        margin-bottom: 30px;
        letter-spacing: 3px;
        text-shadow: 0 0 10px rgba(74, 246, 38, 0.6); /* Glowing text */
    }

    .xp-track {
        background-color: #051205;
        border: 1px solid #1a3a1a;
        border-radius: 2px;
        height: 35px;
        width: 100%;
        margin-bottom: 25px;
    }

    .xp-fill {
        background-color: #4af626;
        height: 100%;
        /* A faint repeating stripe pattern to make it look like retro tech */
        background-image: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 10px,
            rgba(0,0,0,0.2) 10px,
            rgba(0,0,0,0.2) 20px
        );
        transition: width 0.3s ease-out; 
        box-shadow: 0 0 15px rgba(74, 246, 38, 0.5); /* Glowing bar */
