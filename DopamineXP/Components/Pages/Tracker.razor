        align-items: center !important;
    }

    .xp-input {
        width: 100% !important; 
        margin-bottom: 10px;
    }

    .level-up-btn {
        margin-left: 0 !important; 
        text-align: center;
    }
    
    .points-streak {
        margin-bottom: 100px;
    }
