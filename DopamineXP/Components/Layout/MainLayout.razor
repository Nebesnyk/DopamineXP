@using DopamineXP.Models
@inherits LayoutComponentBase
@inject NavigationManager NavManager
@inject Services.TrackerBrain Brain

<div class="master-layout">
    <div class="side-panel">
        <div class="dopaminexp-text text-custom" 
             style="@(activeTask != null ? $"--task-color: {activeTask.HexColor}; --task-color-dark: {activeTask.GetDarkerHex(0.6)}; --task-shadow-light: {activeTask.GetRgba(0.4)}; --task-shadow-strong: {activeTask.GetRgba(0.8)}; --task-shadow-med: {activeTask.GetRgba(0.5)};" : "")">
            DOPAMINEXP
        </div>
        
        <NavLink href="/" class="rainbow-btn">
            <span>ADD TASK</span>
        </NavLink>
        
        @foreach (DopamineTask task in Brain.CustomTasks)
        {
            <NavLink href="@($"/task/{task.Name}")" 
                     class="nav-item custom-task" 
                     style="@($"--task-color: {task.HexColor}; --task-bg-active: {task.GetRgba(0.1)}; --task-shadow: {task.GetRgba(0.4)};")">
                @task.Name
            </NavLink>
        }

    </div>
    <div class="content-area">
        <main>
            @Body
        </main>
    </div>
</div>

@code {
    private DopamineTask? activeTask;

    protected override void OnInitialized()
    {
        Brain.LoadFromFile();
        
        NavManager.LocationChanged += (s, e) =>
        {
            UpdateState();
            StateHasChanged();
        };
        UpdateState();
        
        Brain.OnChange += StateHasChanged;
    }
    

    private void UpdateState()
    {
        string url = NavManager.Uri.ToLower();

        if (url.Contains("/task/"))
        {
            string taskName = NavManager.Uri.Split("/task/").Last();
            taskName = System.Net.WebUtility.UrlDecode(taskName);
            activeTask = Brain.CustomTasks.FirstOrDefault(t => t.Name == taskName);
        }
        else
            activeTask = null;
    }

    private string GetTitleTheme()
    {
        return activeTask != null ? "text-custom" : "text-blue";
    }

}

<style>
    :root {
        --task-color: #ffffff;
        --task-bg-active: rgba(255, 255, 255, 0.1);
        --task-shadow: rgba(255, 255, 255, 0.4);
    }
    
    .master-layout {
        display: flex;
        min-height: 100vh;
        width: 100%;
    }

    .content-area {
        flex: 1;
        display: flex; 
    }

    main {
        flex: 1;
        display: flex;
    }

    .side-panel {
        background: radial-gradient(circle at top left, #1f2328, #2c3137);
        padding: 20px;
        width: 230px;

        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .dopaminexp-text {
        font-weight: 900;
        font-size: 20px;
        text-shadow: 0 0 10px rgb(255, 255, 255);
        padding-bottom: 50px;
    }
    
    .text-custom {animation: pulse-custom 3s infinite; }
    
    
    @@keyframes pulse-custom {
        0% {
            color: var(--task-color-dark); 
            text-shadow: 0 0 5px var(--task-shadow-light);
        }
        50% {
            color: var(--task-color); 
            text-shadow: 0 0 15px var(--task-shadow-strong), 0 0 30px var(--task-shadow-med);
        }
        100% {
            color: var(--task-color-dark); 
            text-shadow: 0 0 5px var(--task-shadow-light);
        }
    }
    
    .nav-item {
        text-decoration: none;
        background-color: #1a1d20;
        color: #ffffff;
        padding: 12px 20px;
        margin-bottom: 15px;
        border-radius: 8px;
        width: 100%;
        text-align: center;
        font-weight: bold;
        box-sizing: border-box;
        
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }
    
    .nav-item:hover {
        background-color: #262a2e;
        transform: translateX(4px);
    }

    a.nav-item:active {
        transform: scale(0.95) !important; 
        background-color: #262a2e !important; 
        transition: transform 0.1s !important; 
    }

    .custom-task:hover {color: var(--task-color);}
    
    .custom-task.active {
        background-color: var(--task-bg-active);
        color: var(--task-color);
        border-left: 4px solid var(--task-color);
        box-shadow: inset 10px 0 15px -10px var(--task-shadow);
    }
    
    .custom-task:active {color: var(--task-color) !important;}
    
    /*CUSTOM ADD A TASK BUTTON FIELD//////////*/
    .rainbow-btn {
        text-decoration: none;
        position: relative;
        padding: 14px 40px;
        font-size: 18px;
        font-weight: 700;
        color: white;
        background: #1e1e1e;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        overflow: hidden;
        z-index: 1;
        transition: transform 0.2s ease, box-shadow 0.3s ease;
        
        margin-bottom: 20px;
    }

    .rainbow-btn::before {
        content: "";
        position: absolute;
        inset: -3px;
        border-radius: inherit;
        background: linear-gradient(
            90deg,
            red,
            orange,
            yellow,
            lime,
            cyan,
            blue,
            violet,
            red
        );
        background-size: 300% 100%;
        animation: rainbowMove 4s linear infinite;
        z-index: -2;
    }
    
    .rainbow-btn::after {
        content: "";
        position: absolute;
        inset: 3px;
        background: #1e1e1e;
        border-radius: inherit;
        z-index: -1;
    }
    
    .rainbow-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 0 20px rgba(255, 0, 255, 0.4),
        0 0 40px rgba(0, 255, 255, 0.3);
    }
    
    .rainbow-btn:active {
        transform: scale(0.96);
    }
    
    @@keyframes rainbowMove {
        0% { background-position: 0% 50%; }
        100% { background-position: 300% 50%; }
    }
    /*CUSTOM ADD A TASK BUTTON FIELD//////////*/

    @@media (max-width: 768px) {
    .master-layout {
        flex-direction: column !important;
        width: 100% !important;
        max-width: 100vw !important; 
        overflow-x: hidden !important; 
    }

    .side-panel {
        width: 100% !important;
        height: auto !important;
        position: relative !important;
        padding: 15px !important;
        box-sizing: border-box !important;
    }

    .content-area {
        width: 100% !important;
        max-width: 100vw !important; 
        overflow-x: hidden !important;
        box-sizing: border-box !important;
    }

    main {
        width: 100% !important;
        max-width: 100vw !important;
        box-sizing: border-box !important;
    }

    .dopaminexp-text {
        padding-top: 20px !important;
        padding-bottom: 20px !important;
    }
    }
</style>

